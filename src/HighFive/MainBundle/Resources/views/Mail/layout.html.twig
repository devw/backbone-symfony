<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>HighFive</title>
    <style type="text/css">
        {# TODO: move all these variables ot the stylesheet template once the summary mail does not have inline styles relying on them anymore #}

        {# ---- Colors Set ---- #}
        {% set color_white = '#ffffff' %}
        {% set color_lighter_gray = '#f2f2f2' %}
        {% set color_light_gray = '#e4e4e4' %}
        {% set color_gray = '#b3b3b3' %}
        {% set color_dark_gray = '#666666' %}
        {% set color_darker_gray = '#444444' %}
        {% set color_blue = '#3ca7dd' %}
        {% set color_dark_blue = '#3799AC' %}


        {# ---- Font-Family ---- #}
        {% set base_font_size = '13px' %}
        {% set small_font_size = '12px' %}
        {% set mini_font_size = '11px' %}

        {# ---- Font-Family ---- #}
        {% set font_family = "Helvetica, Arial, sans-serif !important" %}

        {% set base_pic_dir = get_base_asset_url() ~ '/bundles/frontend/img/' %}

        {% include "MainBundle:Mail:style.css.twig" %}
    </style>
</head>

<body class="body" bgcolor="{{ color_light_gray }}">

    <table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="{{ color_light_gray }}">
        <tr>
            <td bgcolor="{{ color_light_gray }}" width="100%">

                <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="25" class="divider" />
                <br/>

                <table width="600" cellpadding="0" cellspacing="0" border="0" align="center" class="table">
                    <tr>
                        <td width="600" class="cell">
                            <table width="100%" cellpadding="0" cellspacing="0" border="0">
                                <tr>
                                    <td width="100%" bgcolor="{{ color_white }}">

                                        <table width="100%" cellpadding="20" cellspacing="0" border="0">
                                            <tr>
                                                <td width="180" class="logocell">
                                                    <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="10" class="hide" />
                                                    <br class="hide" />
                                                    <img src="{{ base_pic_dir ~ 'logo.png' }}" alt="HighFive" class="logo" />
                                                    <br/>
                                                    <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="10" class="hide" />
                                                    <br class="hide" />
                                                </td>
                                                <td width="350" class="title">
                                                    {% block title %}{% endblock %}
                                                </td>
                                                <td align="center" width="70" class="hide"></td>
                                            </tr>

                                            <tr>
                                                <td colspan="3" bgcolor="{{ color_blue }}" class="color-separator"></td>
                                            </tr>

                                            <tr>
                                                <td bgcolor="{{ color_white }}" class="contentblock" colspan="3">
                                                    {% block content %}{% endblock %}
                                                </td>
                                            </tr>
                                        </table>

                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>

                <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="25" class="divider" />
                <br/>

                <table width="100%" cellpadding="0" cellspacing="0" border="0" bgcolor="{{ color_lighter_gray }}">
                    <tr>
                        <td>
                            <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="30" />
                            <br/>
                            <table width="600" cellpadding="0" cellspacing="0" border="0" align="center" class="table">
                                <tr>
                                    <td width="600" nowrap bgcolor="{{ color_lighter_gray }}" class="cell">
                                        <table width="600" cellpadding="0" cellspacing="0" border="0" class="table">
                                            <tr>
                                                <td width="380" valign="top" class="footershow">
                                                    <p class="reminder">
                                                        You’re receiving this because you’re an awesome HighFive member.
                                                    </p>

                                                    <p>
                                                        <a href="{{ url('frontend') }}">{{ 'mail.links.home'|trans }}</a>
                                                    </p>
                                                </td>

                                                <td align="right" width="220" valign="top" class="hide">

                                                    <table cellpadding="0" cellspacing="0" border="0">
                                                        <tr>
                                                            <td colspan="3">
                                                                <a href="https://twitter.com/highfivenow">
                                                                    <img border="0" src="{{ base_pic_dir ~ 'twitter.gif' }}" width="42" height="32" alt="Follow us on Twitter" />
                                                                </a>
                                                            </td>
                                                        </tr>
                                                    </table>

                                                    <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="10" />
                                                    <br/>

                                                    <p class="footer-site-name">HighFive</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>

                            <img border="0" src="{{ base_pic_dir ~ 'spacer.gif' }}" width="1" height="25" />
                            <br/>

                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
