{% extends 'form_div_layout.html.twig' %}

{% block form_label %}
    {% spaceless %}
        {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' control-label')|trim}) %}
        {{ parent() }}
    {% endspaceless %}
{% endblock %}

{% block form_widget_simple %}
    {% spaceless %}
        {% set attr = attr|merge({'class': (attr.class|default('') ~ ' span5')|trim}) %}
        {{ parent() }}
    {% endspaceless %}
{% endblock %}

{% block form_row %}
    {% spaceless %}
        <div class="control-group {% if errors is not empty %}form-error{% endif %}">
            {{ form_label(form) }}
            <div class="controls">
                {{ form_widget(form) }}
            </div>
            {{ form_errors(form) }}
        </div>
    {% endspaceless %}
{% endblock %}
