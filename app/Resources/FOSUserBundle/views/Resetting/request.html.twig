{% extends 'MainBundle::layout.html.twig' %}

{% block content %}
<div class="block block-showcase">
    <h2 class="layout-title">{{ 'password_recovery.title'|trans }}</h2>
</div>

<hr class="layout-color-separator">

<div class="block block-showcase">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form form-user-administration">
        <div class="form-user-administration-content">
            {% if invalid_username is defined %}
                <div class="form-error">
                    {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}
                </div>
            {% endif %}

            <p>{{ 'password_recovery.info.fill_in_email'|trans }}</p>
            <hr>

            <div class="control-group">
                <label class="control-label" for="username">{{ 'password_recovery.label.email'|trans }}</label>
                <div class="controls">
                    <input type="text" id="username" name="username" required="required" placeholder="{{ 'security.placeholder.enter_email'|trans }}" class="span5" />
                </div>
            </div>
        </div>

        <div class="form-user-administration-actions">
            <button class="btn form-user-administration-actions-submit" type="submit" data-tid="loading-button" data-loading-text="{{ 'layout.messages.loading'|trans }}" autocomplete="off">{{ 'password_recovery.action.recover'|trans }}</button>
            {{ 'registration.info.have_account'|trans }} <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
        </div>
    </form>
</div   </form>
</div>
{% endblock %}
